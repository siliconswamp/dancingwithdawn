<% include ./partials/header %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Parent Portal - Settings</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="icon" href="images/logo_nowords.png" type="image/png">
</head>
<body ng-app="home_app" style="margin-bottom:120px">
<div class="content">
    <div ng-controller="HomeController">
        <div>
            </br>
			<div>
			<h3>Settings for <%= currentUser.username %></h3>
			<h3>Name: <%= currentUser.first_name %> <%= currentUser.last_name %></h3>
			<h3>Address: <%= currentUser.street %>, <%= currentUser.city %>, <%= currentUser.state %> <%= currentUser.zip %> </h3>
			<h3>Cell #: <%= currentUser.cell_number %></h3>
			<h3>Phone #: <%= currentUser.alt_number %></h3>
			<h3>E-mail: <%= currentUser.email %></h3>
			<h3>Relationship: <%= currentUser.relationship %></h3>
			</div>
          
        </div>
    </div>
</div>



<div id="footer" style ="position: absolute; bottom:0; left:0; height:100px; width: 100%"></div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="https://code.angularjs.org/1.4.3/angular.js"></script>
<script src="js/app.js"></script>
<script src="js/factories/home_factory.js"></script>
<script src="js/controllers/home_controller.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="js/scripts/content.js"></script>
</body>
</html>