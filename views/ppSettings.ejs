<% include ./partials/ppHeader %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Parent Portal - Settings</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="icon" href="images/logo_nowords.png" type="image/png">
</head>
<body ng-app="home_app" style="margin-bottom:120px">

<div id="ppStaticMenu"></div>
<div class="content">
    <div ng-controller="HomeController">
        <div>
            </br>
            <div style="text-align: right;">
                <div style="color:#636363; text-align: center; float: right; padding-right: 200px; font-variant: small-caps; vertical-align: center"  width="500" height="200">
                    <h1 style="clear: left; margin-bottom: 0px">Dance With Dawn</h1>
                    <h5 style="margin-top: 0px; color: #969696;">Kids Dance & Theatre Classes Filled With Love & Joy</h5>
                </div>
                <img style="float: right;" src="images/logo_nowords.png" height="100">
				<br>
            </div>
			
			<div style="text-align: left;position:fixed; right: 0px; top: 200px">
			<h1>Settings for <%= currentUser.username %></h1>
			<h1>Name: <%= currentUser.first_name %> <%= currentUser.last_name %></h1>
			<h1>Address: <%= currentUser.street %>, <%= currentUser.city %>, <%= currentUser.state %> <%= currentUser.zip %> </h1>
			<h1>Cell #: <%= currentUser.cell_number %></h1>
			<h1>Phone #: <%= currentUser.alt_number %></h1>
			<h1>E-mail: <%= currentUser.email %></h1>
			<h1>Relationship: <%= currentUser.relationship %></h1>
			</div>
          
        </div>
    </div>
</div>



<div id="footer" style ="position: absolute; bottom:0; left:0; height:100px; width: 100%"></div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="https://code.angularjs.org/1.4.3/angular.js"></script>
<script src="js/app.js"></script>
<script src="js/factories/home_factory.js"></script>
<script src="js/controllers/home_controller.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="js/scripts/content.js"></script>
</body>
</html>