<% include ./partials/header %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Text</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="icon" href="images\logo_nowords.png" type="image/png">
</head>
<body ng-app="home_app">
<div class="content">
    <div ng-controller="HomeController">
        <table class="table table-striped table-hover">
            <tr>
                <th>Type</th>
                <th>Header</th>
                <th>Header2</th>
                <th>Message</th>
            </tr>
            <tr ng-repeat="text in admin_features" ng-click="display.show = 1;showDetails(text);">
                <td>{{text.type}}</td>
                <td>{{text.header}}</td>
                <td>{{text.header2}}</td>
                <td>{{text.message}}</td>
            </tr>
        </table>
        <div class="jumbotron" style="line-height: 10pt; width:50%" ng-show="display.show == 1" ng-app ng-controller="edit_admin_features">
            <!-- Display detailed information -->
            <h2>Update FAQ</h2></br></br>
            <div class="contactform">
                <label for="header1">Header</label>
                <input type="text" ng-model="updated_text.header" id="header1"/>
                <label for="header2">Sub-Header</label>
                <input type="text" ng-model="updated_text.header2" id="header2"/>
                <textarea ng-model="updated_text.message" id="message" name="message"
                          style="height:200px; line-height: normal;"></textarea>
                <button confirmed-click="update_text()" ng-confirm-click="Update Text?">Update?</button>
            </div>
        </div>
    </div>
</div>
<div id="footer"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="https://code.angularjs.org/1.4.3/angular.js"></script>
<script src="js/app.js"></script>
<script src="js/factories/home_factory.js"></script>
<script src="js/controllers/home_controller.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="js/scripts/content.js"></script>
</body>
</html>
